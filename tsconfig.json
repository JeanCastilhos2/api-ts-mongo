{
  "compilerOptions": {
    "target": "ES6",  // Alvo de compilação JavaScript
    "module": "CommonJS",  // Módulos compatíveis com Node.js
    "strict": true,  // Habilita verificações estritas de tipo
    "esModuleInterop": true,  // Para importar módulos ES6 em CommonJS
    "skipLibCheck": true,
    "outDir": "./dist",  // Pasta de saída para o código compilado
    "rootDir": "./src",  // Diretório raiz dos arquivos TypeScript
    "resolveJsonModule": true,  // Permite importar arquivos JSON
    "isolatedModules": true
  },
  "include": [
    "src/**/*"  // Inclui todos os arquivos TypeScript no diretório src
  ],
  "exclude": [
    "node_modules"  // Exclui node_modules
  ]
}
